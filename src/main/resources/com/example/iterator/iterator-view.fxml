<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #f7f7f7;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.iterator.Controller">
    <!-- Image Display -->
    <ImageView fx:id="imageView" fitHeight="400" fitWidth="600" style="-fx-border-color: #cccccc; -fx-border-width: 2;" />

    <!-- Slideshow Controls -->
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10; -fx-background-color: #e9e9e9; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 5;">
        <Button onAction="#startSlideshow" style="-fx-background-color: white; -fx-text-fill: black; -fx-padding: 5 15;">
            <graphic>
                <ImageView fx:id="playButtonImage" fitWidth="30" fitHeight="30" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/play.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button onAction="#stopSlideshow" style="-fx-background-color: white; -fx-text-fill: black; -fx-padding: 5 15;">
            <graphic>
                <ImageView fx:id="stopButtonImage" fitWidth="30" fitHeight="30" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/stop.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button onAction="#previousImage" style="-fx-background-color: white; -fx-text-fill: black; -fx-padding: 5 15;">
            <graphic>
                <ImageView fx:id="BackButtonImage" fitWidth="30" fitHeight="30" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/back.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button onAction="#nextImage" style="-fx-background-color: white; -fx-text-fill: black; -fx-padding: 5 15;">
            <graphic>
                <ImageView fx:id="NextButtonImage" fitWidth="30" fitHeight="30" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/next.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Configuration Options -->
    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 5;">
        <ComboBox fx:id="formatComboBox" promptText="Choose format" style="-fx-pref-width: 150;">
            <items>
                <FXCollections fx:factory="observableArrayList" />
            </items>
        </ComboBox>
        <Button onAction="#chooseDirectory" text="Choose Directory" style="-fx-background-color: white; -fx-text-fill: black; -fx-padding: 5 10;" />
        <TextField fx:id="directoryField" editable="false" promptText="Directory" style="-fx-pref-width: 200;" />
        <TextField fx:id="delayField" promptText="Delay (sec)" style="-fx-pref-width: 100;" />
    </HBox>
</VBox>
