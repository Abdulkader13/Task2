<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.builder.Controller" spacing="20.0" style="-fx-background-color: #f4f4f9; -fx-padding: 30px;">
    <Text fx:id="titleText" style="-fx-font-size: 28px; -fx-font-family: 'Arial'; -fx-fill: #4a90e2;" text="Value Indicator" />
    <Pane fx:id="indicatorPane" prefHeight="100" prefWidth="400" style="-fx-border-color: #4a90e2; -fx-background-color: #ffffff; -fx-border-width: 2px;" />

    <TextField fx:id="startField" alignment="CENTER" prefHeight="30.0" prefWidth="350.0" promptText="Enter the start of the range">
        <font>
            <Font name="Arial Bold" size="14.0" />
        </font>
    </TextField>

    <TextField fx:id="stopField" alignment="CENTER" prefHeight="30.0" prefWidth="350.0" promptText="Enter the end of the range">
        <font>
            <Font name="Arial Bold" size="14.0" />
        </font>
    </TextField>

    <TextField fx:id="measureField" alignment="CENTER" prefHeight="30.0" prefWidth="350.0" promptText="Enter the current value">
        <font>
            <Font name="Arial Bold" size="14.0" />
        </font>
    </TextField>

    <Button fx:id="updateButton" onAction="#updateIndicator" text="Create Indicator" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;" />
</VBox>
